# Production environment variables for Docker
NODE_ENV=production
DATABASE_URL=postgresql://postgres_proposal:postgres_proposal@database:5432/proposal_db?schema=public
PORT=3000

# API Configuration
API_PORT=3000
JWT_SECRET=your-production-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_USERNAME=postgres_proposal
DB_PASSWORD=postgres_proposal
DB_NAME=proposal_db

# Email Configuration (for production)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-production-email@example.com
SMTP_PASS=your-production-email-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Email Configuration
SENDGRID_API_KEY=your-production-sendgrid-api-key
